<div class="hero-2">

<h1>Login</h1>

<% if flash[:notice] %>
   <p style="color: #2E0854;"><%= flash[:notice] %></p>
<% end %>

<%= form_for :session, :url => sessions_path do |f| %>
    <p>
    <%= f.text_field :username, placeholder: "Username" %>
    </p>
    <p>
    <%= f.password_field :password, placeholder: "Password" %>
    </p>
    <%= f.submit "Log in" %>
<% end %>
</div>
 

